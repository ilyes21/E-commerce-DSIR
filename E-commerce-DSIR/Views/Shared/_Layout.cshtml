@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E-Commerce DSIR</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Toastr CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/E_commerce_DSIR.styles.css" asp-append-version="true" />

    <link href="~/lib/leaflet/leaflet.css" rel="stylesheet" />
    <link href="~/lib/leaflet/leaflet.min.css" rel="stylesheet" />

</head>
<body>
    <!-- Overlay pour sidebar -->
    <div class="sidebar-overlay" id="sidebarOverlay"></div>

    <!-- Header avec Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom">
            <div class="container-fluid px-4">
                <!-- Bouton menu latéral -->
                <button class="btn btn-categories me-3" id="toggleMenu">
                    <img src="~/images/categorie.png" alt="Catégories" />
                    <span class="d-none d-lg-inline">Catégories</span>
                </button>

                <!-- Logo/Brand -->
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-shopping-bag"></i>
                    <span>E-Commerce DSIR</span>
                </a>

                <!-- Toggle pour mobile -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMenu"
                        aria-controls="navbarMenu" aria-expanded="false" aria-label="Toggle navigation"
                        style="background-color: rgba(255, 255, 255, 0.9);">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarMenu">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <!-- Accueil -->
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i>Accueil
                            </a>
                        </li>

                        <!-- Catégories -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="categoriesDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-list me-1"></i>Catégories
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="categoriesDropdown">
                                <li>
                                    <a class="dropdown-item" asp-controller="Category" asp-action="Index">
                                        <i class="fas fa-th-large text-primary"></i>
                                        Toutes les catégories
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Category" asp-action="Create">
                                        <i class="fas fa-plus-circle text-success"></i>
                                        Nouvelle catégorie
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <!-- Articles -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="articlesDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-box me-1"></i>Articles
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="articlesDropdown">
                                <li>
                                    <a class="dropdown-item" asp-controller="Product" asp-action="Index">
                                        <i class="fas fa-boxes text-primary"></i>
                                        Tous les articles
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Product" asp-action="Create">
                                        <i class="fas fa-plus-square text-success"></i>
                                        Nouvel article
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <!-- Mon Panier -->
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Panier" asp-action="Index">
                                <i class="fas fa-shopping-cart me-1"></i>Mon Panier
                            </a>
                        </li>
                        <!-- Mon Stores -->
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Stores" asp-action="Index">
                                <i class="fas fa-map-marked-alt me-1"></i>Maps
                            </a>
                        </li>

                        <!-- Administration (visible uniquement pour Admin) -->
                        @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user-shield me-1"></i>Administration
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Admin" asp-action="CreateRole">
                                            <i class="fas fa-plus text-success"></i>
                                            Créer un rôle
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Admin" asp-action="Index">
                                            <i class="fas fa-list-ul text-primary"></i>
                                            Liste des rôles
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>

                    <!-- Barre de recherche -->
                    <form class="d-flex search-form me-3" asp-controller="Product" asp-action="Search" method="get">
                        <input class="form-control search-input me-2" type="search" name="val"
                               placeholder="🔍 Rechercher un article..." aria-label="Rechercher">
                        <button class="btn search-btn" type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                    </form>

                    <!-- Authentification -->
                    @await Html.PartialAsync("_LoginPartial")
                </div>
            </div>
        </nav>
    </header>

    <!-- Sidebar latérale pour catégories -->
    <div id="sidebar">
        <div class="sidebar-header">
            <h3><i class="fas fa-bars me-2"></i>Catégories</h3>
        </div>
        <ul class="list-group list-group-flush">
            @await Html.PartialAsync("_CategoriesMenu", ViewData["Categories"])
        </ul>
    </div>

    <!-- Contenu principal -->
    <main class="container">
        @RenderBody()
    </main>

    <!-- Footer compact -->
    <footer>
        <div class="container">
            <p>
                <i class="fas fa-copyright me-1"></i>2025 - <strong>E-Commerce DSIR</strong>
            </p>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/CustomScript.js"></script>

    <!-- Script pour le menu latéral -->
    <script>
        $(document).ready(function () {
            // Toggle sidebar
            $('#toggleMenu').click(function () {
                $('#sidebar').toggleClass('active');
                $('#sidebarOverlay').toggleClass('active');
            });

            // Fermer sidebar en cliquant sur l'overlay
            $('#sidebarOverlay').click(function () {
                $('#sidebar').removeClass('active');
                $('#sidebarOverlay').removeClass('active');
            });

            // Fermer sidebar sur mobile après sélection
            $('#sidebar .list-group-item').click(function () {
                if ($(window).width() < 768) {
                    $('#sidebar').removeClass('active');
                    $('#sidebarOverlay').removeClass('active');
                }
            });

            // Animation pour les dropdowns
            $('.dropdown-toggle').on('show.bs.dropdown', function () {
                $(this).find('.fa-chevron-down').addClass('rotate-180');
            });

            $('.dropdown-toggle').on('hide.bs.dropdown', function () {
                $(this).find('.fa-chevron-down').removeClass('rotate-180');
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>