@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gestion des Articles</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/E_commerce_DSIR.styles.css" asp-append-version="true" />

    <style>
        /* Structure de base pour forcer le footer en bas */
        html, body {
            height: 100%;
            margin: 0;
            display: flex;
            flex-direction: column;
            background-color: #f8f9fa;
        }

        main {
            flex: 1; /* pousse le footer vers le bas */
        }

        .navbar {
            background: linear-gradient(90deg, #0069d9, #00bcd4);
        }

        .navbar-brand, .nav-link, .dropdown-item {
            color: black !important;
            font-weight: 500;
        }

            .nav-link:hover, .dropdown-item:hover {
                color: #000000 !important;
            }

        footer {
            background-color: #212529;
            color: white;
            padding: 15px 0;
            text-align: center;
        }

            footer a {
                color: #ffc107;
                text-decoration: none;
            }

                footer a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg shadow">
            <div class="container-fluid">
                <a class="navbar-brand fs-4" asp-controller="Home" asp-action="Index">Gestion des Articles</a>
                <button class="navbar-toggler bg-light" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMenu"
                        aria-controls="navbarMenu" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarMenu">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        <!-- Accueil -->
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index"> Accueil</a>
                        </li>

                        <!-- Catégories -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="categoriesDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                 Catégories
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="categoriesDropdown">
                                <li><a class="dropdown-item" asp-controller="Category" asp-action="Index">Toutes les catégories</a></li>
                                <li><a class="dropdown-item" asp-controller="Category" asp-action="Create">➕ Nouvelle catégorie</a></li>
                            </ul>
                        </li>

                        <!-- Articles -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="articlesDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                 Articles
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="articlesDropdown">
                                <li><a class="dropdown-item" asp-controller="Product" asp-action="Index">Tous les articles</a></li>
                                <li><a class="dropdown-item" asp-controller="Product" asp-action="Create">🆕 Nouvel article</a></li>
                            </ul>
                        </li>
                        <!-- Administration Roles -->
                        @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" ariahaspopup="
    true" aria-expanded="false">Administration</a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-area="" asp-controller="Admin" asp-action="CreateRole">
                                        Create
                                        Role
                                    </a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" asp-area="" asp-controller="Admin" asp-action="Index">
                                        List
                                        Roles
                                    </a>
                                </div>
                            </li>
                        }
                    </ul>

                    <!-- Barre de recherche -->
                    <form class="d-flex" asp-area="" asp-controller="Product" asp-action="Search" method="get">
                        <input class="form-control me-2" type="search" name="val" placeholder="Rechercher un article...">
                        <button class="btn btn-warning" type="submit">🔍</button>
                    </form>
                       
                    @await Html.PartialAsync("_LoginPartial")
                </div>
            </div>
        </nav>
    </header>

    <main class="container mt-4 mb-4">
        @RenderBody()
    </main>

    <footer class="mt-auto">
        <div class="container">
            &copy; 2025 - <strong>Ilyes Cherif DSIR</strong>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/CustomScript.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
