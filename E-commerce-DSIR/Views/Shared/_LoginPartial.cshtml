@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<style>
    .auth-nav {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

        .auth-nav .nav-item {
            margin: 0;
        }

    .auth-link {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 500;
        font-size: 0.875rem;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
        background: none;
    }

        .auth-link:hover {
            text-decoration: none;
            transform: translateY(-1px);
        }

        .auth-link.primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            box-shadow: 0 2px 8px rgba(102, 126, 234, 0.3);
        }

            .auth-link.primary:hover {
                box-shadow: 0 4px 16px rgba(102, 126, 234, 0.4);
                color: white;
            }

        .auth-link.secondary {
            background: rgba(0, 0, 0, 0.05);
            color: #333;
            border: 1px solid rgba(0, 0, 0, 0.1);
        }

            .auth-link.secondary:hover {
                background: rgba(0, 0, 0, 0.08);
                color: #333;
                border-color: rgba(0, 0, 0, 0.15);
            }

        .auth-link.logout {
            background: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 100%);
            color: white;
            box-shadow: 0 2px 8px rgba(255, 107, 107, 0.3);
        }

            .auth-link.logout:hover {
                box-shadow: 0 4px 16px rgba(255, 107, 107, 0.4);
                color: white;
            }

    .user-welcome {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        color: white;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 500;
        font-size: 0.875rem;
        transition: all 0.3s ease;
        box-shadow: 0 2px 8px rgba(79, 172, 254, 0.3);
    }

        .user-welcome:hover {
            text-decoration: none;
            color: white;
            transform: translateY(-1px);
            box-shadow: 0 4px 16px rgba(79, 172, 254, 0.4);
        }

    .auth-icon {
        font-size: 0.875rem;
        opacity: 0.9;
    }

    .logout-form {
        margin: 0;
        display: inline-block;
    }

    .user-avatar {
        width: 24px;
        height: 24px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.75rem;
        font-weight: 600;
    }

    /* Animation simple au chargement */
    .auth-nav .nav-item {
        opacity: 1;
        transform: translateY(0);
        transition: all 0.3s ease;
    }

    /* Styles pour mobile - utilisation de Bootstrap responsive */
    .auth-nav {
        flex-wrap: wrap;
    }

        /* Tailles réduites pour petits écrans */
        .auth-nav.mobile-friendly .auth-link,
        .auth-nav.mobile-friendly .user-welcome {
            padding: 0.4rem 0.8rem;
            font-size: 0.8rem;
        }

        .auth-nav.mobile-friendly .user-avatar {
            width: 20px;
            height: 20px;
            font-size: 0.7rem;
        }
</style>

<ul class="navbar-nav auth-nav d-flex flex-row">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a id="manage" class="user-welcome" asp-area="Identity" asp-page="/Account/Manage/Index" title="Gérer le compte">
                <div class="user-avatar">
                    @(UserManager.GetUserName(User)?.Substring(0, 1).ToUpper() ?? "U")
                </div>
                <span class="d-none d-sm-inline">Bonjour @UserManager.GetUserName(User)!</span>
                <span class="d-sm-none">@UserManager.GetUserName(User)</span>
                <span class="auth-icon">⚙️</span>
            </a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="logout-form" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="auth-link logout">
                    <span class="auth-icon">🚪</span>
                    <span class="d-none d-sm-inline">Déconnexion</span>
                    <span class="d-sm-none">Exit</span>
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="auth-link secondary" id="register" asp-area="Identity" asp-page="/Account/Register">
                <span class="auth-icon">👤</span>
                <span>S'inscrire</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="auth-link primary" id="login" asp-area="Identity" asp-page="/Account/Login">
                <span class="auth-icon">🔐</span>
                <span>Connexion</span>
            </a>
        </li>
    }
</ul>