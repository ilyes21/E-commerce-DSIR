@model E_commerce_DSIR.Models.Category
@{
    ViewData["Title"] = "Créer une catégorie";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Assure-toi que le layout global est bien utilisé
}

<div class="content-wrapper">
    <div class="page-header d-flex align-items-center justify-content-between mb-4">
        <div>
            <h2 class="page-title mb-1">➕ Nouvelle Catégorie</h2>
            <p class="text-muted mb-0">Ajoutez une nouvelle catégorie pour organiser vos produits.</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-primary">
            ⬅️ Retour à la liste
        </a>
    </div>

    <div class="card shadow-sm border-0 p-4 rounded-3 bg-white">
        <div class="d-flex align-items-center mb-3">
            <div class="icon-container bg-primary text-white d-flex align-items-center justify-content-center rounded-circle me-3" style="width:50px;height:50px;">
                <i class="bi bi-folder-plus fs-4"></i>
            </div>
            <h4 class="mb-0">Formulaire de création</h4>
        </div>

        <form asp-action="Create" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-4">
                <label asp-for="CategoryName" class="form-label fw-semibold">Nom de la catégorie</label>
                <input asp-for="CategoryName" class="form-control shadow-sm" placeholder="Ex : Électronique, Vêtements, Livres..." />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-end gap-3 mt-4">
                <a asp-action="Index" class="btn btn-light border">
                    ❌ Annuler
                </a>
                <button type="submit" class="btn btn-primary">
                    💾 Enregistrer
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
