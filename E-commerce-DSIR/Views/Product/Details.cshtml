@model E_commerce_DSIR.Models.Product

@{
    ViewData["Title"] = "Détails du produit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <div class="page-header d-flex align-items-center justify-content-between mb-4">
        <div>
            <h2 class="page-title mb-1">Détails du produit</h2>
            <p class="text-muted mb-0">Informations complètes sur le produit sélectionné.</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-primary">
            ⬅️ Retour à la liste
        </a>
    </div>

    <div class="card shadow-sm border-0 p-4 rounded-3 bg-white">
        <div class="d-flex align-items-center mb-3">
            <div class="icon-container bg-info text-white d-flex align-items-center justify-content-center rounded-circle me-3" style="width:50px;height:50px;">
                <i class="bi bi-box-seam fs-4"></i>
            </div>
            <h4 class="mb-0">Fiche Produit</h4>
        </div>

        <dl class="row mt-4 mb-0">
            <dt class="col-sm-3 fw-semibold text-secondary">
                Nom du produit :
            </dt>
            <dd class="col-sm-9 text-dark fw-medium">
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt class="col-sm-3 fw-semibold text-secondary">
                Prix (DT) :
            </dt>
            <dd class="col-sm-9 text-dark fw-medium">
                @Html.DisplayFor(model => model.Price)
            </dd>

            <dt class="col-sm-3 fw-semibold text-secondary">
                Quantité en stock :
            </dt>
            <dd class="col-sm-9 text-dark fw-medium">
                @Html.DisplayFor(model => model.QteStock)
            </dd>

            <dt class="col-sm-3 fw-semibold text-secondary">
                Catégorie :
            </dt>
            <dd class="col-sm-9 text-dark fw-medium">
                @Html.DisplayFor(model => model.Category.CategoryName)
            </dd>
            <dt class="col-sm-3 fw-semibold text-secondary">
                Image :
            </dt>
            <dd class="col-sm-9 text-dark fw-medium">
                @if (!string.IsNullOrEmpty(Model.Image))
                {
                    <img src="~/images/@Model.Image" alt="Image de @Model.Image" style="max-width:70px; max-height:70px;" />
                }
                else
                {
                    <span class="text-muted">Pas d'image</span>
                }
            </dd>
        </dl>

        <hr class="my-4" />

    </div>
</div>
