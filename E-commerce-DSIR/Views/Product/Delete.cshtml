@model E_commerce_DSIR.Models.Product

@{
    ViewData["Title"] = "Supprimer un produit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <div class="page-header d-flex align-items-center justify-content-between mb-4">
        <div>
            <h2 class="page-title mb-1 text-danger">
                Suppression du produit
            </h2>
            <p class="text-muted mb-0">Confirmez la suppression de ce produit. Cette action est irréversible.</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-primary">
            ⬅️ Retour à la liste
        </a>
    </div>

    <div class="card shadow-sm border-0 p-4 rounded-3 bg-white">
        <div class="alert alert-danger d-flex align-items-center" role="alert">
            <i class="bi bi-exclamation-triangle-fill fs-4 me-2"></i>
            <div>
                Êtes-vous sûr de vouloir supprimer ce produit ?
            </div>
        </div>

        <div class="d-flex align-items-center mb-3">
            <div class="icon-container bg-danger text-white d-flex align-items-center justify-content-center rounded-circle me-3" style="width:50px;height:50px;">
                <i class="bi bi-box-seam fs-4"></i>
            </div>
            <h4 class="mb-0">Détails du produit à supprimer</h4>
        </div>

        <dl class="row mt-4 mb-0">
            <dt class="col-sm-3 fw-semibold text-secondary">
                Nom du produit :
            </dt>
            <dd class="col-sm-9 text-dark fw-medium">
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt class="col-sm-3 fw-semibold text-secondary">
                Prix (DT) :
            </dt>
            <dd class="col-sm-9 text-dark fw-medium">
                @Html.DisplayFor(model => model.Price)
            </dd>

            <dt class="col-sm-3 fw-semibold text-secondary">
                Quantité en stock :
            </dt>
            <dd class="col-sm-9 text-dark fw-medium">
                @Html.DisplayFor(model => model.QteStock)
            </dd>

            <dt class="col-sm-3 fw-semibold text-secondary">
                Catégorie :
            </dt>
            <dd class="col-sm-9 text-dark fw-medium">
                @Html.DisplayFor(model => model.Category.CategoryName)
            </dd>
        </dl>

        <hr class="my-4" />

        <form asp-action="Delete" method="post" class="d-flex justify-content-end gap-3">
            <input type="hidden" asp-for="ProductId" />
            <button type="submit" class="btn btn-danger px-4 rounded-pill shadow-sm">
                🗑️ Supprimer définitivement
            </button>
        </form>
    </div>
</div>
