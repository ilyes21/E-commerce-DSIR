@model E_commerce_DSIR.Models.Store
@{
    ViewData["Title"] = "Modifier un Magasin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content-wrapper">
    <div class="page-header d-flex align-items-center justify-content-between mb-4">
        <div>
            <h2 class="page-title mb-1">✏️ Modifier le Magasin</h2>
            <p class="text-muted mb-0">Modifiez les détails du magasin.</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-primary">
            ⬅️ Retour à la liste
        </a>
    </div>
    <div class="card shadow-sm border-0 p-4 rounded-3 bg-white">
        <div class="d-flex align-items-center mb-3">
            <div class="icon-container bg-primary text-white d-flex align-items-center justify-content-center rounded-circle me-3" style="width:50px;height:50px;">
                <i class="bi bi-pencil-square fs-4"></i>
            </div>
            <h4 class="mb-0">Formulaire de modification</h4>
        </div>
        <form asp-action="Edit" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Id" />
            
            <div class="mb-4">
                <label asp-for="Name" class="form-label fw-semibold">Nom du magasin</label>
                <input asp-for="Name" class="form-control shadow-sm" placeholder="Ex : Magasin Centre-Ville..." />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Address" class="form-label fw-semibold">Adresse</label>
                <input asp-for="Address" class="form-control shadow-sm" placeholder="Ex : 123 Rue de la Paix..." />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="PhoneNumber" class="form-label fw-semibold">Numéro de téléphone</label>
                <input asp-for="PhoneNumber" class="form-control shadow-sm" placeholder="Ex : +33 1 23 45 67 89" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6 mb-4">
                    <label asp-for="Lat" class="form-label fw-semibold">Latitude</label>
                    <input asp-for="Lat" type="number" step="0.000001" class="form-control shadow-sm" placeholder="Ex : 48.8566" />
                    <span asp-validation-for="Lat" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-4">
                    <label asp-for="Long" class="form-label fw-semibold">Longitude</label>
                    <input asp-for="Long" type="number" step="0.000001" class="form-control shadow-sm" placeholder="Ex : 2.3522" />
                    <span asp-validation-for="Long" class="text-danger"></span>
                </div>
            </div>

            <div class="d-flex justify-content-end gap-3 mt-4">
                <a asp-action="Index" class="btn btn-light border">
                    ❌ Annuler
                </a>
                <button type="submit" class="btn btn-primary">
                    💾 Enregistrer les modifications
                </button>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}




